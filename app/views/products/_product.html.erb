<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <% if product.category_id %>
      <strong>Category:</strong>
      <%= product.category.name %>
    <% else %>
      <strong>No Category</strong>
    <% end %>
  </p>

</div>
